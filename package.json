{
  "name": "@comicrelief/component-library",
  "author": "Comic Relief Engineering Team",
  "version": "0.0.0-see.readme.for.semantic.release.process",
  "main": "dist/index.js",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/cypress/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetTransformer.js"
    }
  },
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/comicrelief/component-library.git"
  },
  "dependencies": {
    "@babel/cli": "^7.10.4",
    "axios": "^0.19.2",
    "jest-styled-components": "^7.0.2",
    "lazysizes": "^5.1.0",
    "lodash": "^4.17.11",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-currency-format": "^1.0.0",
    "react-dom": "^16.8.6",
    "react-hook-form": "^5.7.2",
    "react-scripts": "3.4.1",
    "react-styleguidist": "^11.0.8",
    "react-test-renderer": "^16.8.6",
    "react-uid": "^2.2.0",
    "styled-components": "^5.1.1",
    "youtube-player": "^5.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "test": "yarn run jest",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "postinstall": "yarn run build",
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js",
    "cy:run": "export NODE_ENV=development; cypress run --headless --browser chrome",
    "cy:open": "export NODE_ENV=development; cypress open",
    "feature-test": "run-p --race styleguide cy:run",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "cypress": "^4.9.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "semantic-release": "^15.13.17"
  }
}
