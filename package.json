{
  "name": "component-library",
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetTransformer.js"
    }
  },
  "version": "0.1.0",
  "private": false,
  "license": "(ISC OR GPL-3.0)",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/comicrelief/component-library.git"
  },
  "dependencies": {
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-currency-format": "^1.0.0",
    "react-dom": "^16.8.6",
    "react-moment": "^0.9.2",
    "react-scripts": "3.0.1",
    "react-styleguidist": "^9.1.5",
    "styled-components": "^4.3.1"
  },
  "scripts": {
    "test": "yarn run jest --watch",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "publish:npm": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.8.0",
    "jest-styled-components": "^6.3.3",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6"
  }
}
