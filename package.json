{
  "name": "@comicrelief/component-library",
  "author": "Comic Relief Engineering Team",
  "version": "0.0.0-see.readme.for.semantic.release.process",
  "main": "dist/index.js",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/cypress/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetTransformer.js"
    }
  },
  "module": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/comicrelief/component-library.git"
  },
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@hookform/resolvers": "^1.3.4",
    "axios": "^0.21.1",
    "jest-styled-components": "^7.0.2",
    "lazysizes": "^5.3.2",
    "lodash": "^4.17.11",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-currency-format": "^1.0.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.3.0",
    "react-scripts": "4.0.3",
    "react-styleguidist": "^11.1.6",
    "react-test-renderer": "^17.0.2",
    "react-uid": "^2.2.0",
    "styled-components": "^5.2.3",
    "youtube-player": "^5.5.2",
    "yup": "^0.32.9",
    "yup-phone": "^1.2.19"
  },
  "scripts": {
    "test": "yarn run jest",
    "styleguide": "cross-env FAST_REFRESH=false styleguidist server",
    "styleguide:build": "styleguidist build",
    "postinstall": "yarn run build",
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js",
    "cy:run": "export NODE_ENV=development; cypress run --headless --browser chrome",
    "cy:open": "export NODE_ENV=development; cypress open",
    "feature-test": "run-p --race styleguide cy:run",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "cross-env": "^7.0.3",
    "cypress": "^7.0.1",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^5.0.6",
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "semantic-release": "^15.13.17"
  }
}
